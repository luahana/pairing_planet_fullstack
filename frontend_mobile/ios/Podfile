# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# Disable input/output paths to fix "Argument list too long" error on CI
# See: https://github.com/CocoaPods/CocoaPods/issues/9954
install! 'cocoapods', :disable_input_output_paths => true

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug-dev' => :debug,
  'Debug-stg' => :debug,
  'Debug-prod' => :debug,
  'Debug' => :debug,
  'Profile-dev' => :release,
  'Profile-stg' => :release,
  'Profile-prod' => :release,
  'Profile' => :release,
  'Release-dev' => :release,
  'Release-stg' => :release,
  'Release-prod' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      # Force iOS 15.0 minimum deployment target for Xcode 16+ compatibility
      if config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'].to_f < 15.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
      # Disable code signing for pod targets (they don't need it)
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
      config.build_settings['CODE_SIGN_IDENTITY'] = ''
    end
  end

  # Reduce HEADER_SEARCH_PATHS and FRAMEWORK_SEARCH_PATHS to fix ARG_MAX issue
  installer.pods_project.build_configurations.each do |config|
    # Use inherited paths instead of explicit long lists
    config.build_settings['HEADER_SEARCH_PATHS'] = '$(inherited)'
    config.build_settings['FRAMEWORK_SEARCH_PATHS'] = '$(inherited)'
  end

  # Also reduce paths in the main project
  installer.aggregate_targets.each do |target|
    target.xcconfigs.each do |config_name, config_file|
      # Simplify the xcconfig by removing duplicate paths
      config_file.attributes.delete('HEADER_SEARCH_PATHS')
      config_file.attributes.delete('FRAMEWORK_SEARCH_PATHS')
      config_file.save_as(target.xcconfig_path(config_name))
    end
  end
end
