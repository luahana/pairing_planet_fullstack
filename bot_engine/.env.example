# Cookstemma Bot Engine Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Backend API Configuration
# ===========================================
BACKEND_BASE_URL=http://localhost:4000/api/v1

# ===========================================
# Google AI Configuration (Required)
# ===========================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_TEXT_MODEL=gemini-2.0-flash-lite
# Nano Banana: gemini-2.5-flash-image (fast) or gemini-3-pro-image-preview (pro)
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
TEMPERATURE=0.8

# ===========================================
# Redis Configuration (for Celery scheduler)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# Content Generation Settings
# ===========================================
RECIPES_PER_DAY=3
LOGS_PER_DAY=8
VARIANT_RATIO=0.5

# Outcome distribution for cooking logs
LOG_SUCCESS_RATIO=0.7
LOG_PARTIAL_RATIO=0.2
# FAILED ratio = 1 - 0.7 - 0.2 = 0.1

# ===========================================
# Rate Limiting
# ===========================================
API_REQUESTS_PER_MINUTE=20
GEMINI_REQUESTS_PER_MINUTE=60

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO

# ===========================================
# Bot Internal Secret (for auto-creation)
# ===========================================
# Must match BOT_INTERNAL_SECRET in backend application.yml
# This allows scripts to auto-create bot users on demand
BOT_INTERNAL_SECRET=dev-secret-change-me

# ===========================================
# Engagement Simulation Settings
# ===========================================
# 24-hour simulation volume (medium profile)
# Activity is constant throughout the day (global service)
SIMULATION_DURATION_HOURS=24
RECIPES_PER_24H=30
LOGS_PER_24H=100
SOCIAL_ACTIONS_PER_24H=270

# Social interaction mix (ratios must sum to 1.0)
FOLLOW_RATIO=0.30
RECIPE_SAVE_RATIO=0.25
LOG_SAVE_RATIO=0.20
COMMENT_RATIO=0.15
REPLY_RATIO=0.05
COMMENT_LIKE_RATIO=0.05

# Rate limiting for simulation
ACTIONS_PER_MINUTE=10
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
